{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
